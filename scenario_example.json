{
  "name": "Test Checkout Workflow",
  "base_url": "http://demo.testfire.net",
  "steps": [
    {
      "type": "navigate",
      "url_path": "/login.jsp"
    },
    {
      "type": "input",
      "locator": {"by": "id", "value": "uid"},
      "input_text": "jsmith"
    },
    {
      "type": "input",
      "locator": {"by": "id", "value": "passw"},
      "input_text": "Demo1234"
    },
    {
      "type": "click",
      "locator": {"by": "id", "value": "login"}
    },
    {
      "type": "assert",
      "check": "text_present",
      "value": "Hello John Smith"
    },
    {
      "type": "api_manipulation",
      "endpoint": "/api/transferFunds",
      "method": "POST",
      "payload": {
        "amount": 999999,
        "toAccount": "secretAccount"
      },
      "expected_fail": true
    }
  ]
}
